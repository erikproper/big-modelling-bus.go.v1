#!/bin/bash

function MkIni {
  (
    echo "experiment         = \"experiment-12.10.2025\""
    echo "agent              = \"cdm-$3\""
    echo "work               = \"/tmp\""
    echo "latex              = \"test\""
    echo ""
    echo "[ftp]"
    echo "user               = \"modelling_bus\""
    echo "password           = \"Geheim1967\""
    echo "port               = 21"
    echo "server             = \"$2\""
    echo "single_server_mode = $4"
    echo "active_transfers   = $5"
    echo "prefix             = \"modelling_bus\""
    echo ""
    echo "[mqtt]"
    echo "user               = \"modelling_bus\""
    echo "password           = \"Geheim1967\""
    echo "port               = 1883"
    echo "broker             = \"$2\""
    echo "prefix             = \"modelling_bus\""
    echo "max_message_size   = 1024"
  ) > $1.ini
}

MkIni mobile                    localhost               tester true false
MkIni home                      frame.fritz.box         tester true false
MkIni tuwien                    dm-lab.big.tuwien.ac.at tester true true

MkIni ../model_listener/mobile  localhost               listener true false

MkIni ../model_listener/home1   frame.fritz.box		home-1 true false
MkIni ../model_listener/home2   frame.fritz.box         home-2 true false
MkIni ../model_listener/home3   frame.fritz.box         home-3 true false

MkIni ../model_listener/tuwien1 dm-lab.big.tuwien.ac.at tuwien-1 true true
MkIni ../model_listener/tuwien2 dm-lab.big.tuwien.ac.at tuwien-2 true true
MkIni ../model_listener/tuwien3 dm-lab.big.tuwien.ac.at tuwien-3 true true
